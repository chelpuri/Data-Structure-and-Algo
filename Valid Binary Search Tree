/**
 * Definition for binary tree
 * class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) {
 *      val = x;
 *      left=null;
 *      right=null;
 *     }
 * }
 */
public class Solution {
    public int isValidBST(TreeNode A) {
        if(check(A,Integer.MIN_VALUE,Integer.MAX_VALUE))
        return 1;
        
        return 0;
    }
    public boolean check(TreeNode A,int l,int r)
    {
        if(A==null) return true;
        if(A.val > l && A.val < r)
        {
            boolean left=check(A.left,l,A.val);
            boolean right=check(A.right,A.val,r);
            return (left && right);
        }
        else
         return false;
    }
}

